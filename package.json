{
  "name": "blotter-management-backend",
  "version": "1.0.0",
  "type": "module",
  "description": "Blotter Management System API - Elysia.js + Drizzle ORM - Production Ready",
  "main": "src/index.ts",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "start": "bun src/index.ts",
    "build": "bun run db:push && echo 'Build complete'",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push:pg",
    "db:studio": "drizzle-kit studio",
    "db:seed": "bun src/db/seed.ts",
    "test": "powershell -ExecutionPolicy Bypass -File test-api.ps1",
    "deploy": "bun run build && bunx wrangler deploy"
  },
  "dependencies": {
    "elysia": "0.8.21",
    "@elysiajs/cors": "0.8.1",
    "@elysiajs/swagger": "0.8.3",
    "@elysiajs/bearer": "0.8.1",
    "@elysiajs/jwt": "0.8.1",
    "drizzle-orm": "^0.30.0",
    "postgres": "^3.4.0",
    "@types/pg": "^8.11.0",
    "firebase-admin": "^12.0.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "bun-types": "latest",
    "drizzle-kit": "^0.20.0",
    "@cloudflare/workers-types": "^4.20231102.0"
  }
}
